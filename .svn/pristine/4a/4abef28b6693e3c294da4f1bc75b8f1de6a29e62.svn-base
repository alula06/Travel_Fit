// JQUERY NOTIFICATION BAR

function showSuccess(message) {
    if(message == undefined){
        message = 'Success';
    }
    $.notifyBar({
                html: message,
                delay: 1500,
                animationSpeed: "normal",
                cssClass: 'success'
              });
}

function showError(message) {
    if(message == undefined){
        message = 'An error has occurred. Please contact customer support.';
    }
    $.notifyBar({
                html: message,
                delay: 1500,
                animationSpeed: "normal",
                cssClass: 'error'
              });
}